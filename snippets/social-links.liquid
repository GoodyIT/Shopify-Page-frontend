<div class="social-links{% if largeIcons %} social-links--large{% endif %}">
  {%- assign social_accounts = 'Facebook, Instagram, Twitter' | split: ',' -%}
  <ul class="list--inline">
    {% for social_account in social_accounts %}
      {%- assign social = social_account | strip -%}
      {%- assign social_handle = social | handleize -%}
      {% capture social_link %}social_{{ social_handle }}_link{% endcapture %}
      {% capture social_icon %}icon-{{ social_handle }}{% endcapture %}

        <li class="social-links__icon">
          <a target="_blank" href="{{ settings[social_link] }}" title="{{ 'general.social.social_platform' | t: name: shop.name, platform: social }}"{% if disableTab %} tabindex="-1"{% endif %}>
            {% include social_icon %}
            <span class="icon__fallback-text">{{ social }}</span>
          </a>
        </li>

    {% endfor %}
  </ul>
</div>
